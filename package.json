{
	"name": "icecomponentinit",
	"displayName": "Cocos ICE Component Init",
	"description": "用于初始化ICE组件库文件结构",
	"version": "0.0.4",
	"engines": {
		"vscode": "^1.41.0"
	},
	"categories": [
		"Other"
	],
	"icon": "https://github.com/ccCaowenyue/CocosICECompInit/blob/master/ico.ico?raw=true",
	"activationEvents": [
		"onCommand:icecomponentinit.InitICEComponent"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "icecomponentinit.InitICEComponent",
				"title": "Init ICE Component"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"command": "icecomponentinit.InitICEComponent",
					"group": "1_modification",
					"when": "explorerResourceIsFolder"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"test-compile": "tsc -p ./",
		"test-watch": "tsc -watch -p ./",
		"pretest": "npm run test-compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.57.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"eslint": "^7.27.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2",
		"ts-loader": "^9.2.2",
		"webpack": "^5.38.1",
		"webpack-cli": "^4.7.0"
	},
	"publisher": "ccCaowenyue"
}
